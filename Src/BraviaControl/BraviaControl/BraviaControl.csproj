<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>BraviaControl</RootNamespace>
    <AssemblyName>BraviaControl</AssemblyName>
    <Authors>Mayuki Sawatari</Authors>
    <Version>2.0.0</Version>
    <Company>Mayuki Sawatari</Company>
    <PackageLicenseUrl>https://github.com/mayuki/BraviaControl/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/mayuki/BraviaControl/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mayuki/BraviaControl/</RepositoryUrl>
    <Description>Sony BRAVIA remote control API client for .NET</Description>
    <Copyright>Copyright 2016-present Mayuki Sawatari</Copyright>
    <PackageTags>BRAVIA API</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

</Project>
